{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
{% for article in articles %}


    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">

                    <h5 class="card-title">{{ article.titre }}</h5>
                    <p class="card-text">{{ article.contenu }}</p>
                    <a href="#" class="btn btn-primary">Voir</a>
                </div>
            </div>
    </div>
{% endfor %}
{% endblock %}
